<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>j91-kms_myself</display-name>
  <!-- 实现Filter的注册
  web.xml文件的标签有顺序，filter标签在servlet标签之前
   -->
   <filter>
       <filter-name>com.kms2.filter.EncodingFilter</filter-name>
       <filter-class>com.kms2.filter.EncodingFilter</filter-class>
       <init-param>
           <param-name>encoding</param-name>
           <param-value>UTF-8</param-value>
       </init-param>
   </filter>
   <filter-mapping>
       <filter-name>com.kms2.filter.EncodingFilter</filter-name>
       <url-pattern>/*</url-pattern>
   </filter-mapping>
   <filter>
       <filter-name>com.kms2.filter.AuthFilter</filter-name>
       <filter-class>com.kms2.filter.AuthFilter</filter-class>
   </filter>
   <filter-mapping>
       <filter-name>com.kms2.filter.AuthFilter</filter-name>
       <url-pattern>/admin/*</url-pattern>
   </filter-mapping>
  <filter>
      <!-- 定义Filter对象 -->
      <filter-name>com.kms2.filter.MyFilter</filter-name>
      <filter-class>com.kms2.filter.MyFilter</filter-class>
  </filter>
  <!-- 定义过滤器的拦截范围 -->
  <filter-mapping>
      <filter-name>com.kms2.filter.MyFilter</filter-name>
      <!-- url-pattern 
      		*.xxx:根据URL的后缀名进行拦截
      		/*:访问本app(应用)的所有请求
      		/admin/*本应用下的admin文件夹下的所有url
      		*/admin/ * /*.jsp ->error(错误用法)
       -->
      <url-pattern>*.servlet</url-pattern>
  </filter-mapping>
  <!-- 这个标签的作用是注册一个servlet -->
  <servlet>
      <servlet-name>com.kms2.controller.MyFilterServlet</servlet-name>
      <servlet-class>com.kms2.controller.MyFilterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.MyFilterServlet</servlet-name>
      <url-pattern>/mf.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.UrlServlet</servlet-name>
      <servlet-class>com.kms2.controller.UrlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.UrlServlet</servlet-name>
      <url-pattern>/a/b/c.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.ReadMsssageServlet</servlet-name>
      <servlet-class>com.kms2.controller.ReadMsssageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.ReadMsssageServlet</servlet-name>
      <url-pattern>/p4/rm.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.MsssageServlet</servlet-name>
      <servlet-class>com.kms2.controller.MsssageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.MsssageServlet</servlet-name>
      <url-pattern>/p4/sm.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.SidServlet</servlet-name>
      <servlet-class>com.kms2.controller.SidServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.SidServlet</servlet-name>
      <!-- 这个Servlet不是控制器，本不应在这个包里，但这里为了方便 -->
      <url-pattern>/p4/sid.servlet</url-pattern>
  </servlet-mapping>
 <servlet>
     <servlet-name>com.kms2.controller.LogoutServlet</servlet-name>
     <servlet-class>com.kms2.controller.LogoutServlet</servlet-class>
 </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.LogoutServlet</servlet-name>
      <url-pattern>/p3_2/logout.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.LoginServlet_2</servlet-name>
      <servlet-class>com.kms2.controller.LoginServlet_2</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.LoginServlet_2</servlet-name>
      <url-pattern>/p3_2/login_2.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.MySessionServlet</servlet-name>
  	  <servlet-class>com.kms2.controller.MySessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.MySessionServlet</servlet-name>
      <url-pattern>/mys.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.ReadCookieServlet</servlet-name>
      <servlet-class>com.kms2.controller.ReadCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.ReadCookieServlet</servlet-name>
      <url-pattern>/p3/rc.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>com.kms2.controller.LoginServlet</servlet-name>
      <servlet-class>com.kms2.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>com.kms2.controller.LoginServlet</servlet-name>
      <url-pattern>/p3/login.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>com.kms2.servlet.ListRole2Servlet</servlet-name>
    <servlet-class>com.kms2.servlet.ListRole2Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.kms2.servlet.ListRole2Servlet</servlet-name>
    <url-pattern>/admin/listrole.servlet</url-pattern>
  </servlet-mapping>
  <error-page>
      <exception-type>java.lang.Exception</exception-type>
      <location>/500.html</location>
  </error-page>
  <error-page>
      <error-code>404</error-code>
      <location>/404.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>